@model IEnumerable<E_RecrutementProject.Models.Offre>

@{
    ViewBag.Title = "Index";
}

<h2>Espace Recruteur : Gérer vos Offres</h2>
<br />



<div style=" display: flex; flex-wrap: wrap;">
    <div style="flex: 0 0 calc(20% - 10px); margin: 5px;">
        @using (Html.BeginForm("Index", "Offres", FormMethod.Get))
        {
            <!-- Ajoutez ici les champs du formulaire si nécessaire -->

            <button type="submit" style="background-color:coral; color: blanchedalmond;">Mon Espace</button>
        }
    </div>

    <div style="flex: 0 0 calc(20% - 10px); margin: 5px;">
        @using (Html.BeginForm("Create", "Offres", FormMethod.Get))
        {
            <!-- Ajoutez ici les champs du formulaire si nécessaire -->

            <button type="submit" style="background-color: green; color: blanchedalmond;">Créer Offre</button>
        }
    </div>
    <div style="flex: 0 0 calc(20% - 10px); margin: 5px;">
        @using (Html.BeginForm("Statistiques", "Offres", FormMethod.Get))
        {
            <!-- Ajoutez ici les champs du formulaire si nécessaire -->

            <button type="submit" style="background-color: green; color: blanchedalmond;">Statistiques</button>
        }
    </div>

    <div style="flex: 0 0 calc(20% - 10px); margin: 5px;">

        @using (Html.BeginForm("EspaceEntretiens", "Offres", FormMethod.Get))
        {
            <!-- Ajoutez ici les champs du formulaire si nécessaire -->

            <button type="submit" style="background-color: green; color: blanchedalmond;">Espace Entretiens</button>
        }
    </div>

    <div style="flex: 0 0 calc(20% - 10px); margin: 5px; ">
        @using (Html.BeginForm("SupprimerTous", "Offres", FormMethod.Get))
        {
            <!-- Ajoutez ici les champs du formulaire si nécessaire -->

            <button type="submit" style="background-color: red; color: blanchedalmond;"> Supprimer Tous </button>
        }
    </div>

</div>

<hr />
<table class="table">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.IdRecruteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeContrat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Secteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poste)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remuneration)
        </th>
        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr class="table-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.IdRecruteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeContrat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Secteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poste)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remuneration)
            </td>
            <td>
                <strong> @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) </strong>|
                <strong>@Html.ActionLink("Détails", "Details", new { id = item.Id })  </strong>|
                <strong> @Html.ActionLink("Supprimer", "Delete", new { id = item.Id }) </strong>|
                <strong>@Html.ActionLink("Voir Candidats", "VoirCandidats", new { id = item.Id })</strong>

            </td>
        </tr>
    }

</table>

